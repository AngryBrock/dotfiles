" Coloring on
syntax on

" Allow unsaved buffers and editing in the same window
set hidden

" Make commands easier
set wildmenu
set showcmd

" Highlight searchs
set hlsearch
" Case insensitive search unless capital letters are used.
set ignorecase
set smartcase

" Allow backspacing over autoindent, line breaks and start of insert action.
set backspace=indent,eol,start
set autoindent

set ruler

" Confirm rather than fail.
set confirm

set visualbell
" No flashing or beeping.
set t_vb=

set pastetoggle=<F11>


" Indentation, use spaces instead of tabs
set shiftwidth=2
set softtabstop=2
set expandtab
